{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "/**/*.test.ts",
    "./src/__mocks__/*.ts"
  ],
  "include": [
    "./types/**/*",
    "./src/**/*"
  ]
}
